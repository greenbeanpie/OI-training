{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: gcc 生成活动文件",
      "command": "/usr/bin/g++",
      "args": [
        "-Wall",
        "-Werror",
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/bin/"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "编译器: /usr/bin/g++"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: gcc (windows) 生成活动文件",
      "command": "g++.exe",
      "args": [
        "-Wall",
        "-Werror",
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "test.exe"
      ],
      "options": {
        "cwd": "g++.exe"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "编译器: /usr/bin/g++"
    }
  ],
  "version": "2.0.0"
}
